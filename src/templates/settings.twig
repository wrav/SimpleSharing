{% import "_includes/forms" as forms %}

{{ forms.multiselectField({
    label: "Allowed Sections"|t,
    instructions: "Choose which sections the simple sharing links will show. Leave blank for all sections"|t,
    id: 'allowedSections',
    name: 'allowedSections',
    values: settings['allowedSections'],
    options: optionsSections,
}) }}

{{ forms.multiselectField({
    label: "Allowed Social Media Platforms"|t,
    instructions: "Choose which platforms will be available. Leave blank for all platforms"|t,
    id: 'allowedPlatforms',
    name: 'allowedPlatforms',
    values: settings['allowedPlatforms'],
    options: optionsPlatforms,
}) }}